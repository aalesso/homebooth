<div class="page-header">
  <h3>Item #<%= @item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @item.description %></dd>

      <dt>Newlink</dt>
      <dd> <img id="e10" src="<%= @item.newlink %>"</dd>

      <dt>Location</dt>
      <dd><%= @item.location %></dd>

      <dt>Suggested price</dt>
      <dd><%= @item.suggested_price %></dd>

      <!-- <dt>User</dt> -->
      <dd><% current_user.id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/items" class="btn btn-primary">
        Back
      </a>
      <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_item/<%= @item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
